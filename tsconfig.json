{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      // "@controllers/*": ["./src/controllers/*"],
      // "@routes/*": ["./src/routes/*"],
      // "@services/*": ["./src/services/*"],
      // "@models/*": ["./src/models/*"],
      // "@mocks/*": ["./src/mocks/*"],
      // "@helpers/*": ["./src/helpers/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "include": ["src/**/*"]
}
